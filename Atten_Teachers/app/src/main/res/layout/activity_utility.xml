<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UtilityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/excelBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Download Attendance"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/attendanceBelow75Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Attendance Below 75%"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/subjectsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Subjects"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/uploadTimetableBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Upload Timetable"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <Button
                android:id="@+id/modifySubjectsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_rectangle"
                android:text="Modify Subjects"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/removeLastSemesterStudentsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_rectangle"
                android:text="Remove Last Semester Students"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/updateAllStudentsDetailsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_rectangle"
                android:text="Update All Students Details"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>